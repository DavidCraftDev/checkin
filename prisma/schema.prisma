generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
}

model Attendance {
  id         String   @default(cuid()) @id @unique
  userID     String      
  eventID    String    
  cw         Int
  teacherNote String?
  studentNote String?
  type       String?
  created_at DateTime @default(now())
}

model Events {
  id         String   @default(cuid()) @id @unique
  name       String    
  user       String    
  cw         Int
  studyTime  Boolean  @default(false)
  created_at DateTime @default(now())
}

model StudyTimeData {
  id        String   @default(cuid()) @id @unique
  userID    String
  completed Json
  missing   Json
  cw        Int
  year      Int
}

model User {
  id          String  @default(cuid()) @id @unique
  username    String  @unique
  displayname String 
  permission  Int     @default(0)
  password    String?  
  group       String? 
  needs       Json?
  competence  Json?
  loginVersion Int    @default(0)
}
